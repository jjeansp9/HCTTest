<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.GroupCreateActivity"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 생성"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 이미지"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_edit"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_img_add"
        android:padding="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹명"
        app:layout_constraintTop_toBottomOf="@id/img_add"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_textbox_basic_selector"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_group_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 유형"
        app:layout_constraintTop_toBottomOf="@id/et_group_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/et_group_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_textbox_basic_selector"
        android:text="회사 조직도"

        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_group_category"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_group_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 코드"
        app:layout_constraintTop_toBottomOf="@id/et_group_category"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_group_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_textbox_basic_selector"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_group_code"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <TextView
    android:id="@+id/btn_next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/btn_click"
    android:gravity="center"
    android:padding="16dp"
    android:text="확인"
    android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>