<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/item_root">

    <ImageView
        android:id="@+id/img_member"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_edit"
        android:layout_marginEnd="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_member"
        android:text="홍길동"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_name"
        android:text="94.01.03"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/tv_name"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/btn_member_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_next_selector"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_matching"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="매칭하기"
        android:textColor="@color/white"
        android:background="@drawable/btn_matching_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

</RelativeLayout>