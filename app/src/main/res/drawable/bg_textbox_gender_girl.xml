        <shape android:shape="rectangle">
            <corners android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
            <solid android:color="@color/btn_un_click" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:topRightRadius="8dp" android:bottomRightRadius="8dp" />
            <solid android:color="@color/btn_click"/>
        </shape>
    </item>
</selector>